<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

    <title><%= title %> </title>
    <script type=module src="/modules/modules.js"></script>
    <script defer src="https://unpkg.com/swup@latest/dist/swup.min.js"></script>  
    <script defer src="/js/animation.js"></script>


</head>
<body>
<!--header-->
    <header>
      <my-header></my-header>
    </header>

<main id="swup" class="transition-fade">
      <section class="w3-center w3-panel">
        <h1>You are logged in as [name]</h1>
        <a class= "btn-danger btn" href="/logout">Logout</a>
      </section>
      <!--ARTICLES CONTAINER -->
        <div class="articles w3-panel">
          <h1>Articles Dashboard</h1>
          <a class="btn-primary btn" href="/articles/new"> new article</a>
          <hr>
          <% articles.forEach(article => { %>
                <h2><%= article.title %></h2>
                <p class="date"><%= article.createdAt .toLocaleDateString()%></p>
                <p><%= article.description %></p> 
                <!-- BUTTONS -->
                <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                <!-- edit -->
                <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                <!-- delete button: override the post method -->
                <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger"> Delete </button>
                </form>
                <hr>

          <% }) %>
        </div>
      <!-- USER CONTAINER -->
      <div class="w3-panel articles">
        <div><h1>User Dashboard</h1>
        <a class="btn-primary btn" href="/users/register"> create new user</a>
      </div>
        <hr>
          <% users.forEach(user => { %>
                <p>username: <%= user.username %></p>
                <p>role: <%= user.role %></p>
                <p>id: <%= user.id %></p>
                <p>date created: <%= user.createdAt .toLocaleDateString() %></p>
                                <!-- delete button: override the post method -->
                <form action="/users/<%= user.id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger"> Delete </button>
                <hr>
          <% }) %>
        </div>
    </main>
</body>
</html>