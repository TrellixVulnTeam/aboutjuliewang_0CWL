
<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/blog.css"> 


<header class="intro">
  <h1>Blog</h1>
</header>

<%- include('../partials/_featuredArticles.ejs')%>


<div class="flex-column all-articles">
    <h1>All Articles</h1>
    <div>
    <% articles.forEach(article => { %>
          <%= article.title %>
          <p class="date"><%= article.createdAt .toLocaleDateString()%></p>
          <p><%= article.description %></p> 
          <!-- BUTTONS -->
          <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
          <hr>
      <% }) %>
    </div>
  </div>
</section>
</section>

  
